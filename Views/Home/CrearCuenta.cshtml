@{
    ViewData["Title"] = "Crear cuenta";
}


<section class="create-account-page">
    <article class="crear-caja">
        <h1>Crear cuenta</h1>

        <form class="crear-formulario" method="post">
            <div class="crear-campo">
                <label class="visually-hidden" for="register-email">Correo electrónico</label>
                <input class="crear-entrada" type="email" id="register-email" name="email" placeholder="Correo electronico" autocomplete="email" required />
            </div>

            <div class="crear-campo">
                <label class="visually-hidden" for="register-password">Contraseña</label>
                <input class="crear-entrada" type="password" id="register-password" name="password" placeholder="Contraseña" autocomplete="new-password" required />
            </div>

            <div class="crear-campo">
                <label class="visually-hidden" for="register-confirm">Confirmar contraseña</label>
                <input class="crear-entrada" type="password" id="register-confirm" name="confirmPassword" placeholder="Confirmar contraseña" autocomplete="new-password" required />
            </div>

            <div class="crear-campo">
                <label class="visually-hidden" for="register-username">Nombre de usuario</label>
                <input class="crear-entrada" type="text" id="register-username" name="username" placeholder="Username" autocomplete="username" required />
            </div>

            <label class="crear-opcion" for="terms">
                <input class="crear-casilla" type="checkbox" id="terms" name="terms" required />
                Acepto los términos y condiciones
            </label>

            <label class="crear-opcion" for="updates">
                <input class="crear-casilla" type="checkbox" id="updates" name="updates" />
                Quiero recibir información y anuncios de Melodika
            </label>

            <a href='@Url.Action("Login", "Home")' class="accion-primaria"> Crear cuenta e iniciar sesion </a>
        </form>
    </article>
</section>