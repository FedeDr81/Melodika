@{
    ViewData["Title"] = "login";
}

<section class="login-page">
    <div class="login-card">
        <h1 class="login-title">Inicio de sesion en melodika</h1>
        <form class="login-form" method="post">
            <div class="login-form__group">
                <label class="visually-hidden" for="login-email">Correo electrónico o teléfono</label>
                <input class="login-input" type="text" name="email" placeholder="Correo electronico o telefono"/>
            </div>
            <div class="login-form__group">
                <label class="visually-hidden" for="login-password">Contraseña</label>
                <input class="login-input" type="password" name="password" placeholder="Contraseña"/>
            </div>
            <button type="submit" class="login-button">Iniciar sesion</button>
        </form>

        <p class="register-text">
            ¿No creaste tu cuenta todavia?<br />
            <a href="CrearCuenta.cshtml" class="register-link">Crea tu cuenta</a>
        </p>

        <div class="social-buttons">
            <a class="social-button" href="#">Iniciar sesión con Google</a>
            <a class="social-button" href="#">Iniciar sesión con Facebook</a>
            <a class="social-button" href="#">Iniciar sesión con Instagram</a>
        </div>
    </div>
</section>